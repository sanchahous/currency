.currencyWrapper
  display flex
  justify-content space-between
  align-content center
  height: 70vh;
  width: 70vw;
  margin: auto;
  background #ffffff
  border: 1px solid #d0d0d0;
  padding: 40px;
.currencyList
  border: 1px solid #b7b2b2;
  padding: 7px 15px;
.currencyRightSide
  width: 540px;
.currencyList__title
  text-transform uppercase
  margin-bottom 10px
.currencyList__header
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  padding-bottom: 4px;
  border-bottom: 1px solid #b7b2b2;
.currencyList__strong
  flex-basis 100%
.currencyList__body
  display: block
.currencyList__row
  display flex
  justify-content space-between
  padding: 5px 0;
  border-bottom: 1px solid #b7b2b2;
  &:last-of-type
    border-bottom 0
    padding-bottom 0
.currencyList__item
  flex-basis: 100%;
  display: flex;
  align-items: center;
  cursor pointer
  &:last-of-type
    text-align center
  &:hover, &_active
    font-weight 700
    .currencyList__star
      fill #eaae03
      transition all 0.2s linear
.currencyList__star
  width: 18px;
  height: 18px;
  fill #c7c7c7
  margin-right: 4px;

